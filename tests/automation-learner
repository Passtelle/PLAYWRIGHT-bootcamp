// tests/api-test.spec.ts
import { test, expect } from '@playwright/test';

test('Create User via API', async ({ request }) => {
  // This replicates your Postman "Send" button
  const response = await request.post('reqres.in', {
    data: {
      name: "QA Engineer Passtelle",
      job: "Automation Learner"
    }
  });

  // This replicates your Postman "Tests" tab
  expect(response.status()).toBe(201);
  const responseBody = await response.json();
  console.log(responseBody); // View this in your debug console
});
